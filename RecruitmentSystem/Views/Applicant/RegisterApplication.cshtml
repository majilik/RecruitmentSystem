@model RecruitmentSystem.Models.ViewModel.ApplicationView

@{
    ViewBag.Title = "RegisterApplication";
}

<h2>Register Application</h2>
<hr />

<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(model => model.Competences, htmlAttributes: new { @class = "control-label col-lg-3 col-lg-pull-1" })
        @Html.DropDownList("ddl", new SelectList(Model.Competences, "Value", "Text"),
            new { @class = "form-control col-lg-4 col-lg-pull-1", @id = "competence-list"})
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.SelectedYearsOfExperience, htmlAttributes: new { @class = "control-label col-lg-3 col-lg-pull-1" })
        @Html.EditorFor(model => model.SelectedYearsOfExperience,
            new { htmlAttributes = new { @class = "form-control col-lg-4 col-lg-pull-1", @id = "years-of-experience" } })
    </div>

    <div class="form-group">
        <input id="add-competence" type="button" value="Add" class="btn btn-primary col-lg-offset-2" />
    </div>
</div>

<div class="form-horizontal">
    <div class="form-group">
        @Html.Label("Available From", htmlAttributes: new { @class = "control-label col-lg-3 col-lg-pull-1" })
        <div class="input-group col-lg-3 col-lg-pull-1" style="padding-left:0">
            <input type="text" data-provide="datepicker" class="datepicker form-control" id="datepicker-from" placeholder = "Select date...">
            <label for="datepicker-from" class="input-group-addon btn">
                <span class="glyphicon glyphicon-calendar" />
            </label>
        </div>
    </div>

    <div class="form-group">
        @Html.Label("Available To", htmlAttributes: new { @class = "control-label col-lg-3 col-lg-pull-1" })
        <div class="input-group col-lg-3 col-lg-pull-1" style="padding-left:0">
            <input type="text" data-provide="datepicker" class="datepicker form-control" id="datepicker-to" placeholder="Select date...">
            <label for="datepicker-to" class="input-group-addon btn">
                <span class="glyphicon glyphicon-calendar" />
            </label>
        </div>
    </div>

    <div class="form-group">
        <input id="add-availability" type="button" value="Add" class="btn btn-primary col-lg-offset-2" />
    </div>
</div>

@using (Html.BeginForm("Apply", "Applicant"))
{
    @Html.AntiForgeryToken()

    <table class="table" id="competence-table">
        <tr>
            <th class="col-lg-4">
                @Html.Label("Competence")
            </th>
            <th class="col-lg-4">
                @Html.Label("Years of Experience")
            </th>
            <th class="col-lg-4"></th>
        </tr>
    </table>

    <table class="table" id="availability-table">
        <tr>
            <th class="col-lg-4">
                @Html.Label("Available From")
            </th>
            <th class="col-lg-4">
                @Html.Label("Available To")
            </th class="col-lg-4">
            <th class="col-lg-4"></th>
        </tr>
    </table>

    <div class="form-horizontal">
        <div class="form-group">
            <input type="submit" value="Apply" class="btn btn-primary col-lg-offset-2" />
        </div>
    </div>
}